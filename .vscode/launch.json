{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Remote Attach (Outside container)",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5685 },
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "." }
      ],
      "justMyCode": false
    },

    {
      "name": "Python: Remote Attach (Inside container)",
      "type": "python",
      "request": "attach",
      "connect": { "host": "localhost", "port": 5678 },
      "pathMappings": [
        { "localRoot": "${workspaceFolder}", "remoteRoot": "." }
      ],
      "justMyCode": false
    },

    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--no-reload"],
      "jinja": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.flaskenv"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "host": "localhost",
      "port": 9091,
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH":"${workspaceFolder}"},
      "envFile": "${workspaceFolder}/.flaskenv",
      "justMyCode": false,
  },
  {
    "name": "Upgrade DB",
    "type": "python",
    "request": "launch",
    "module": "flask",
    "env": {"DATABASE_URL":"postgresql://postgres:password@localhost:5432/assessment_store"},
    "envFile": "${workspaceFolder}/.flaskenv",
    "args": [
      "db",
      "upgrade"
    ]
  },
  {
    "name": "Downgrade DB",
    "type": "python",
    "request": "launch",
    "module": "flask",
    "env": {"DATABASE_URL":"postgresql://postgres:password@localhost:5432/assessment_store"},
    "envFile": "${workspaceFolder}/.flaskenv",
    "args": [
      "db",
      "downgrade",
      "30d27919f1d8"
    ]
  },
  {
    "name": "Prepare DB Migration",
    "type": "python",
    "request": "launch",
    "module": "flask",
    "env": {"DATABASE_URL":"postgresql://postgres:password@localhost:5432/assessment_store"},
    "envFile": "${workspaceFolder}/.flaskenv",
    "args": [
      "db",
      "migrate"
    ]
  },
  {
      "name": "Import Applications to Assessment",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/import_from_application.py",
      "console": "integratedTerminal",
      "host": "localhost",
      "port": 9091,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.flaskenv",
      "env": { "PYTHONPATH":"${workspaceFolder}"},
      "justMyCode": false,
      "args": ["--roundid", "c603d114-5364-4474-a0c4-c41cbf4d3bbd",
        "--app_type", "COF"]
  },
  {
      "name": "Seed Applications in assessment-store",
      "type": "python",
      "request": "launch",
      "module": "invoke",
      "console": "integratedTerminal",
      "host": "localhost",
      "port": 9091,
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.flaskenv",
      "justMyCode": false,
      "args": ["seed_dev_db"]
  },
  {
      "name": "Run Tests: All",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "env": {"DATABASE_URL":"postgresql://postgres:password@localhost:5432/assessment_store"},
  },
  {
      "name": "Run Tests: Current File (debug)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {"DATABASE_URL":"postgresql://postgres:password@localhost:5432/assessment_store"},
      "args": [
          "-c",
          "pytest.ini",
          "${file}"
      ],
      "justMyCode": false
  },
  {
      "name": "Run Tests: Current Function (debug)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
          "-c",
          "pytest.ini",
          "-k",
          "test_route_fund_dashboard_shows_flagged"
      ],
      "justMyCode": false
  },
  ]
}
